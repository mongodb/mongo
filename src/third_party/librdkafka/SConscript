        'dist/src/rdgz.c',
        'dist/src/rdhdrhistogram.c',
        'dist/src/rdhttp.c',
        'dist/src/rdkafka.c',
        'dist/src/rdkafka_admin.c',
        'dist/src/rdkafka_assignment.c',
