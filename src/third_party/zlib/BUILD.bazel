package(default_visibility = ["//visibility:public"])

cc_library(
    name = "zlib",
    srcs = [
        "adler32.c",
        "compress.c",
        "crc32.c",
        "deflate.c",
        "infback.c",
        "inffast.c",
        "inflate.c",
        "inftrees.c",
        "trees.c",
        "uncompr.c",
        "zutil.c",
    ],
    hdrs = glob(["*.h"]),
    copts = select({
        "@platforms//os:windows": [],
        "//conditions:default": ["-Wno-implicit-fallthrough"],
    }),
    includes = ["."],
    local_defines = select({
        "@platforms//os:windows": ["HAVE_STDARG_H"],
        "//conditions:default": [
            "HAVE_STDARG_H",
            "HAVE_UNISTD_H",
        ],
    }),
)
