    deps = [
        "//src/mongo/db/storage:record_store_base",
        "//src/mongo/db/storage:stub_container",
        "//src/mongo/transport/named_pipe",
    ],
)

mongo_cc_unit_test(
    name = "virtual_collection_test",
    srcs = [
        "external_record_store_test.cpp",
    ],
    tags = ["mongo_unittest_eighth_group"],
    deps = [
        ":virtual_collection",
        "//src/mongo/db/storage:record_store_base",
    ],
)
