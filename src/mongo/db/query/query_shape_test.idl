global:
  cpp_namespace: "mongo"

imports:
  - "mongo/db/basic_types.idl"

enums:
    ExampleEnum:
        description: ""
        type: string
        values:
            Value1: "EnumValue1"
            Value2: "EnumValue2"

structs:
    NestedStruct:
        query_shape_component: true
        strict: true
        description: ""
        fields: 
            stringField:
                query_shape_literal: true
                type: string
            enumField:
                query_shape_literal: false
                type: ExampleEnum
            stringIntVariant:
                query_shape_literal: true
                type:
                    variant: [string, int]
            stringIntVariantEnum:
                query_shape_literal: false
                type:
                    variant: [string, int]
            arrayOfInts:
                query_shape_literal: true
                type: array<int>
            fieldpath:
                query_shape_fieldpath: true
                type: string
            fieldpathList:
                query_shape_fieldpath: true
                type: array<string>

    ParentStruct:
        query_shape_component: true
        strict: true
        description: ""
        fields:
            nested_shape:
                query_shape_literal: true
                type: NestedStruct
            nested_no_shape:
                query_shape_literal: false
                type: NestedStruct
