    name = "validate_options",
    srcs = [
        "validate_options.cpp",
    ],
    hdrs = [
        "validate_options.h",
    ],
    deps = [
        "//src/mongo/bson:bson_validate",
    ],
)

mongo_cc_library(
    name = "validate_results",
    srcs = [
        "validate_results.cpp",
    ],
    hdrs = [
        "validate_results.h",
    ],
    deps = [
        ":validate_options",
    ],
)

