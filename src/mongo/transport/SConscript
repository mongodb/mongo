# -*- mode: python -*-

Import("env")

env = env.Clone()


def shouldBuildGRPC(myEnv):
    return myEnv.TargetOSIs("linux") and myEnv["ENABLE_GRPC_BUILD"]


if shouldBuildGRPC(env):
    env.SConscript(
        must_exist=1,
        dirs=[
            "grpc",
        ],
        exports=[
            "env",
        ],
    )

env.CppUnitTest(
    target="transport_test",
    source=[],
    LIBDEPS=[],
)

env.CppIntegrationTest(
    target="transport_integration_test",
    source=[],
    LIBDEPS=[],
)

env.Benchmark(
    target="service_executor_bm",
    source=[],
    LIBDEPS=[],
)

env.Benchmark(
    target="session_workflow_bm",
    source=[],
    LIBDEPS=[],
)

env.Benchmark(
    target="message_compressor_bm",
    source=[],
    LIBDEPS=[],
)
